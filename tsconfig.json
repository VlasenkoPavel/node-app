{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "baseUrl": "src/server/",
        "paths": {
            "@infrastructure/*": ["infrastructure/*"],
            "@core/*": ["application/core/*"],
            "@application/*": ["application/*"],
            "@components/*": ["application/components/*"]
        }
    },
    "exclude": [
        "./node_modules",
        "./dist"
    ],
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ]
}
