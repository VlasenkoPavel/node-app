{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "jsx": "react",
        "baseUrl": "src/server/",
        "paths": {
            "@infrastructure/*": [
                "infrastructure/*"
            ]
        }
    },
    "exclude": [
        "./node_modules",
        "./dist"
    ],
    "include": [
        "./src/**/*.ts",
        "./src/**/*.tsx"
    ]
}
